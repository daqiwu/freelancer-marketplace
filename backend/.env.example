# ================================
# Backend Configuration Template
# Copy this file to .env and update with your actual values
# ================================

# Application Settings
APP_NAME=freelancer-marketplace-backend
DEBUG=false
PORT=8000
WORKERS=4

# Database Configuration
# Replace these with your actual managed database credentials
DB_USER=freelancer
DB_PASSWORD=your-secure-password
DB_NAME=freelancer_marketplace
DB_HOST=your-managed-db-host.region.rds.amazonaws.com
DB_PORT=3306

# Database URL (AWS RDS, Azure Database, or other cloud provider)
# Format: mysql+aiomysql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=mysql+aiomysql://freelancer:password123@your-managed-db-host.region.rds.amazonaws.com:3306/freelancer_marketplace

# Environment Settings
USE_DOCKER=false
ENVIRONMENT=production

# Security (MUST CHANGE IN PRODUCTION!)
SECRET_KEY=change-this-to-a-secure-random-key-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings (Optional)
# ALLOWED_ORIGINS=http://localhost:8080,https://yourdomain.com
# ALLOW_CREDENTIALS=true

# Logging (Optional)
# LOG_LEVEL=INFO
# LOG_FILE=/app/logs/backend.log
