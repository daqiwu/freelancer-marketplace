[run]
# Coverage configuration
source = app
omit = 
    */tests/*
    */test_*.py
    */__pycache__/*
    */venv/*
    */.venv/*
    */migrations/*
    */alembic/*
    */config.py
    */main.py

[report]
# Reporting options
precision = 2
show_missing = True
skip_covered = False

# Minimum coverage threshold
fail_under = 80

# Exclude lines from coverage
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.
    if TYPE_CHECKING
    @abstractmethod
    @abc.abstractmethod
    pass

[html]
# HTML report configuration
directory = htmlcov
title = Freelancer Marketplace Coverage Report

[xml]
# XML report for CI/CD
output = coverage.xml

